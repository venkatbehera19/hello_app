<% provide(:title, 'Users') %>
<h1>All the users</h1>
<div class="userBtnGroup">
    <%= button_to 'Add New User', new_user_path , method: :get, class: 'btn btn-lg btn-primary' %> 
    <%= button_to 'Micro Posts', microposts_path , method: :get ,class: 'btn btn-lg btn-primary' %>
</div>
<table id="user">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th colspan="3">Action</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <tr>
                <td><%= user.name%></td>
                <td><%= user.email%></td>
                <td><%= link_to 'View', user %></td>
                <td><%= link_to 'Edit', edit_user_path(user) %></td>
                <td><%= button_to 'Delete', user, method: :delete, class: 'btn btn-sm btn-danger' %></td>
            </tr>
        <% end %>
    </tbody>
</table>