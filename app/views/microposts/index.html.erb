<p style="color: green"><%= notice %></p>

<h1>All Microposts</h1>

<%= button_to 'Add New micropost', new_micropost_path , method: :get, class: 'btn btn-lg btn-primary' %> 

<table id="user">
  <thead>
    <tr>
      <th>User Id</th>
      <th>Content</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>
  <tbody>
      <% @microposts.each do |micropost| %>
        <tr>
          <%= render micropost %>
        </tr>
      <% end %>
  </tbody> 
</table>
